<%- include ../layouts/header.ejs %>
<div class="page-data">
    <form method="post" action="/users/edit/<%=data[0].id%>">
        <table cellpadding="11">
            <tr>
                <td class="label">Name</td>
                <td><input type="text" name="name" value="<%=data[0].name%>" required /></td>
            </tr>
            <tr>
                <td class="label">Email</td>
                <td><input type="text" value="<%=data[0].email%>" name="email" required /></td>
            </tr>
            <tr>
                <td class="label">Gender</td>
                <td><input type="text" name="gender" value="<%=data[0].phone%>" required /></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    <button type="submit">Save</button>
                    <button type="button" onClick="cancelAdd()">Cancel</button>
                </td>
            </tr>
        </table>
    </form>
</div>
<%- include ../layouts/footer.ejs %>
